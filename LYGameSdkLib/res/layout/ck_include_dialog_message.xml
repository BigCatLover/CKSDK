<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ck_bg_edit_two"
        android:layout_marginRight="@dimen/ckgame_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/ckgame_activity_horizontal_margin"
        android:layout_centerInParent="true"
        android:layout_height="233dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/message_ll"
                android:layout_height="match_parent">
                <ListView
                    android:layout_marginTop="5dp"
                    android:id="@+id/list_view"
                    android:scrollbars="none"
                    android:layout_marginRight="35dp"
                    android:divider="#00000000"
                    android:listSelector="@android:color/transparent"
                    android:dividerHeight="0dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/close"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ck_cancle"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/detail_ll"
                android:visibility="gone"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/title_ll"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/title"
                        android:text="title"
                        android:textSize="16dp"
                        android:textColor="@color/ck_black"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/detail_close"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ck_cancle"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:gravity="left|center"
                    android:text="13345"
                    android:layout_below="@+id/title_ll"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>