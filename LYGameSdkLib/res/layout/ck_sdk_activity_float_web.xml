<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout 
        android:id="@+id/lyg_sdk_rl_top"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="@color/ck_green">
		<ImageView
			android:id="@+id/lyg_sdk_iv_return"
			android:layout_width="wrap_content"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:layout_height="match_parent"
			android:src="@drawable/ck_sdk_float_ic_back"
			android:layout_centerVertical="true" />
	    <TextView
	        android:id="@+id/lyg_sdk_tv_charge_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="@string/ck_usercenter"
			android:maxLength="8"
	        android:layout_centerInParent="true"
	        android:textColor="@android:color/white"/>
	</RelativeLayout>
    <WebView
        android:id="@+id/lyg_sdk_wv_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lyg_sdk_rl_top"
        />
</RelativeLayout>
