<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/ckgame_tip_horizontal_margin"
    android:layout_marginLeft="@dimen/ckgame_tip_horizontal_margin"
    android:background="@drawable/ck_bg_edit_two"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/title_ll"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="领取成功"
            android:textSize="14dp" />
        <View
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:id="@+id/split"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ck_gray_line" />

        <TextView
            android:layout_below="@+id/split"
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/ck_text"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:text="礼包领取成功,请在礼包有效期间，在游戏内使用。" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/ck_rect_white">

        <TextView
            android:id="@+id/tv_codeName"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            android:text="@string/ck_gift"
            android:gravity="center"
            android:textColor="@color/ck_text"
            android:background="@drawable/ck_border_left" />

        <TextView
            android:background="@drawable/ck_rect_white"
            android:id="@+id/tv_codeContent"
            android:layout_toRightOf="@id/tv_codeName"
            android:layout_toLeftOf="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="ttw688888888"
            android:textColor="@color/ck_green"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ck_border_right"
            android:gravity="center"
            android:text="@string/ck_copy"
            android:textColor="@color/ck_white"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>
