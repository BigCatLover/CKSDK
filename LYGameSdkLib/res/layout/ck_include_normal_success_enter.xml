<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="282dp"
        android:layout_height="144dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ck_bg_edit_two">

        <RelativeLayout
            android:id="@+id/regist_success_tip"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:text="@string/ck_regist_success"
                android:textColor="@color/ck_green"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/left"
                android:layout_width="43dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/title"
                android:src="@drawable/ck_bg_left" />

            <ImageView
                android:id="@id/right"
                android:layout_width="43dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@id/title"
                android:src="@drawable/ck_bg_right" />

        </RelativeLayout>

        <TextView
            android:id="@+id/acountname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_success_tip"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="1345667"
            android:textColor="@color/ck_text_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acountname"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/ck_welcome"
            android:textColor="@color/ck_green"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>