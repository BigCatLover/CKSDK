<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@drawable/ck_bg_edit_two"
        android:layout_width="320dp"
        android:layout_height="190dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/close"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/ck_cancle"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:text="@string/ck_fastlogin"
            android:gravity="center"
            android:id="@+id/fastregist"
            android:background="@drawable/ck_sdk_login_btn"
            android:textColor="@color/ck_green"
            android:layout_height="35dp" />

        <TextView
            android:layout_below="@+id/fastregist"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:textSize="16dp"
            android:text="@string/ck_account_login"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:id="@+id/acountlogin"
            android:background="@drawable/ck_sdk_login_btn"
            android:textColor="@color/ck_green"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="250dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/acountlogin"
            android:textSize="16dp"
            android:text="@string/ck_visitor_login"
            android:gravity="center"
            android:id="@+id/visitorplay"
            android:background="@drawable/ck_sdk_login_btn"
            android:textColor="@color/ck_green"
            android:layout_height="35dp" />
    </RelativeLayout>
    
</RelativeLayout>