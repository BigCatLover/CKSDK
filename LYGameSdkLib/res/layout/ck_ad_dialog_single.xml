<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ck_image_bg"
        android:layout_height="307dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/title_ll"
            android:layout_alignParentTop="true"
            android:background="@drawable/ck_title_bg"
            android:layout_height="35dp">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/title"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:shadowDy="10"
                android:shadowRadius="3"
                android:shadowDx="5"
                android:shadowColor="@color/ck_black"
                android:text="标题"
                android:textColor="@color/ck_white"
                android:textSize="16dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/close"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ck_ad_close"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <ImageView
            android:layout_below="@id/title_ll"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/url_single"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>
