<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:visibility="visible">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="260dp"
        android:background="@drawable/ck_float_show_tip_bg"
        android:layout_height="220dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/tv_hint"
            android:layout_marginTop="15dp"
            android:text="翻一翻可以显示小图标"
            android:textColor="@color/ck_white"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/tip_gif"
            android:layout_width="120dp"
            android:layout_below="@+id/tv_hint"
            android:layout_centerInParent="true"
            android:src="@drawable/ck_image_show_float_tip"
            android:layout_height="80dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:id="@+id/check_ll"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tip_gif"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/notip_again"
                android:layout_alignParentLeft="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:background="@drawable/ck_selector_tip"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="wrap_content"
                android:text="不再提醒"
                android:textSize="14dp"
                android:layout_toRightOf="@id/notip_again"
                android:textColor="@color/ck_gray"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/check_ll"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="取消"
                android:id="@+id/cancle"
                android:background="@drawable/ck_btn_no"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:textSize="14dp"
                android:textColor="@color/ck_white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="隐藏"
                android:background="@drawable/ck_btn_yes"
                android:id="@+id/hide"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/ck_white"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>