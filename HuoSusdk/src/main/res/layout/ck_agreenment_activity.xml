<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lyg_sdk_rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ck_green">
        <ImageView
            android:id="@+id/lyg_sdk_iv_return"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ck_sdk_float_ic_back"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/lyg_agreen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ck_usercenter"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:scrollbars="none"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/title_content"
                android:textColor="@color/ck_text_black"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="fhgjj"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lyg_agreen_content"
                android:layout_width="fill_parent"
                android:text="sjhgfjjhgkjk"
                android:textColor="@color/ck_text_black"
                android:textSize="14dp"
                android:layout_height="fill_parent"
                android:layout_below="@id/lyg_sdk_rl_top" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

